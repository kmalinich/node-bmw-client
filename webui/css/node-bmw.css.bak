/* Misc page/element tweaks */
html, body {
	font-family            : '.sf-regular',sans-serif;
	-webkit-font-smoothing : subpixel-antialiased;
}

.navbar-nav>li>a {
	font-family : '.sf-thin',sans-serif;
}

h1.title {
  font-family : '.sf-ultralight',sans-serif;
  font-size   : 72px;
}

.row {
	margin-bottom: 5px;
}

h1, h2, h3, h4, h5, h6, hr, p, .lead {
	margin: 6px 0px 6px 0px;
}

.h4, h4 {
	font-size : 24px;
}

.h6, h6 {
	font-size : 15px;
}

hr {
	border-top : 1px solid #37a2c7;
  box-shadow : 1px 1px 4px rgba(0, 0, 0, 0.4);
}


/* Buttons */

.panel-default>.panel-heading {
  color: #000;
  background-color: #989898;
}

.btn {
  box-shadow : 2px 2px 10px rgba(0, 0, 0, 0.4);
}

.btn-group-lg>.btn, .btn-lg {
  border-radius : 6px;
  font-size     : 24px;
  line-height   : 2;
  padding       : 8px 16px;
}

.btn-success {
	color : #000;
}

.btn-danger {
	color : #000;
}

.btn-warning {
	color : #000;
}

.btn-primary {
	color            : #000;
	background-color : #37a2c7;
	border-color     : #5d9ab8;
}

.btn-success {
	color : #222;
}

.col-xs-4.block-left,
.col-xs-6.block-left {
	padding-right : 3px;
}

.col-xs-4.block-center {
	padding-left : 3px;
	padding-right : 3px;
}

.col-xs-4.block-right,
.col-xs-6.block-right {
	padding-left : 3px;
}

/* Custom navbar */

.navbar {
	box-shadow    : 5px 5px 15px rgba(0, 0, 0, 0.4);
	margin-bottom : 10px;
}

.navbar-brand {
	padding-left   : 15px;
	padding-right  : 10px;
	padding-top    : 5px;
	padding-bottom : 5px;
}

.navbar-brand-img {
	width  : 40px;
	height : 40px;
}


/* Live WebSocket data table */

.table-live {
	height   : 300px !important;
	overflow : auto;
}


/* Sliders */

.slider.slider-vertical .slider-tick, .slider.slider-vertical .slider-handle {
	margin-left: -5px;
	margin-top: -18px;
}

.slider-horizontal {
	min-width  : 100%;
}

.slider-track {
  box-shadow : 2px 3px 9px rgba(0, 0, 0, 0.3);
}

.slider.slider-vertical {
	width : 46px;
}

.slider-handle {
	background-image: linear-gradient(to bottom,#37a2c7 0,#5d9ab8 100%);
}

.slider-selection, .slider-track, .slider-track-low, .slider-track-high {
	background: #7f8487;
}

.tooltip {
	font-size : 18px;
}

.tooltip-inner {
	background-color : rgba(42, 159, 214, 1);
}

.tooltip.bottom .tooltip-arrow {
	border-bottom-color : rgba(42, 159, 214, 1);
}
